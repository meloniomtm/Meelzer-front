{
    "compilerOptions": {
      /* Basic Options */            
      "target": "es5",                          
      "module": "commonjs",                                    
      "sourceMap": true,                     
      // "outFile": "./",                      
      "outDir": "./build",                       
      "rootDir": "./src",                                    
      "removeComments": true,                            
  
      /* Strict Type-Checking Options */
      "strict": true,                           
      "noImplicitAny": true,                               
  
      /* Module Resolution Options */
      "esModuleInterop": true,                                        
        
      /* Advanced Options */
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true
    }
  }